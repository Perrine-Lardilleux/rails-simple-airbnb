  <nav class="navbar navbar-light bg-light">
    <span class="navbar-text"> Simple Airbnb </span>
  </nav>

  <div class="container mt-3">
    <h2 id="title"> All our Flats </h2>
  </div>

  <div class="container">
    <% @flats.each do |flat| %>
    <div class="row">
      <div class="card" style="width: 250px; height: 250px">
        <div class="card-content bg-light p-2 mt-2" style="height: 150px">
          <h5 class="card-title"><%= flat.name %></h5>
          <h6 class="card-subtitle"><%= flat.description %></h6>
        </div>
        <div class="d-flex justify-content-between bg-light p-2">
          <p><%= flat.price_per_night %></p>
          <p><%= flat.number_of_guest %></p>
        </div>
        <div style="height: 30px; text-decoration: none">
          <a href="#" class="card-link">More Info</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
